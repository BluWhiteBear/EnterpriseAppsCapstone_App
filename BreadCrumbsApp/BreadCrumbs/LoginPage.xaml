<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreadCrumbs.LoginPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Welcome to the Login page"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Please Login Below!"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Login Information"
                FontSize="18"
                HorizontalOptions="Center" />

            <!--Redirect to another Page Button-->
            <Button 
                Text="Home Page"
                 FontAttributes="Bold"
                 Grid.Row="3"
                 Clicked="OnHomeButtonClicked"
                 HorizontalOptions="Center" />

            <Button 
                Text="Main Page"
                 FontAttributes="Bold"
                 Grid.Row="3"
                 Clicked="OnMainButtonClicked"
                 HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>